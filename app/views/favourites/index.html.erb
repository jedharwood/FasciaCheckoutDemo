<div class="container mx-auto p-8">
    <h2 class="pb-2">Materials/Favourites</h2>
    <div class="flex justify-center text-left"> 
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table>
                        <tbody>
                            <% @favourites.each do |favourite| %>
                                <tr class="border-b hover:bg-gray-100 whitespace-nowrap">
                                    <td><%= image_tag favourite.material.image, class: "h-12 w-12 rounded-sm" %></td>
                                    <td class="p-4 text-teal-500 hover:text-teal-300 focus:underline"><%= link_to favourite.material.name, material_path(favourite.material) %></td>
                                    <td class="px-2 py-4 text-teal-500 hover:text-teal-300 focus:underline delete-button">    
                                        <%= button_to favourites_path(favourite), method: :delete do %>
                                            <%= inline_svg_tag('delete_icon.svg', class: 'h-5 w-5') %>
                                        <% end %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    