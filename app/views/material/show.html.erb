<div class="bg-white">
    <div class="pt-6">
        <div class="max-w-2xl mx-auto px-4 flex items-center space-x-2 sm:px-6 lg:max-w-7xl lg:px-8 mb-2">
            <h1 class="font-semibold text-4xl"><%= @material.name %></h1>
        </div>
        <div class="max-w-2xl mx-auto px-4 flex justify-end items-center space-x-2 sm:px-6 lg:max-w-7xl lg:px-8">
            <div>
                <svg 
                    data-controller="favourites"
                    data-action="click->favourites#favourite"
                    data-favourited="<%= favourited?(@material) %>"
                    data-favourited-colour="#14b8a6"
                    data-material-id="<%= @material.id %>"
                    data-favourite-id="<%= get_favourite_id(@material) %>"
                    xmlns="http://www.w3.org/2000/svg" 
                    fill="<%= favourited?(@material) ? '#14b8a6' : 'none' %>" 
                    viewBox="0 0 24 24" 
                    stroke-width="1.5" 
                    stroke="currentColor" 
                    class="w-6 h-6 cursor-pointer inline-block relative align-bottom text-gray-500"  
                >
                    <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" 
                    />
                </svg>
                <span class="cursor-pointer">Favourite</span>
            </div>
        </div>
        <div class="mt-6 max-w-2xl mx-auto sm:px-6 lg:max-w-7xl lg:px-8">
            <div class="aspect-auto overflow-hidden block">
                <%= image_tag @material.image, class: "w-full h-full object-center object-cover" %>
            </div>
        </div>
        <%= render "material_info" %>
        <div class="max-w-2xl mx-auto sm:px-6 lg:max-w-7xl lg:px-8">
            <hr>
        </div>
    </div>
</div>

<%= render "material_description_modal" %>